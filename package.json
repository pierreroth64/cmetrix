{
  "name": "cmetrix",
  "version": "1.0.0",
  "description": "CLI to build code metrics chart for your projects",
  "main": "build/main.js",
  "bin": {
    "cmetrix": "build/main.js"
  },
  "files": [
    "build"
  ],
  "scripts": {
    "tslint": "tslint --fix 'lib/**/*.ts'",
    "jest": "jest --verbose",
    "testw": "jest --watch",
    "prettier": "prettier --write '**/*.{js,json,md,ts}'",
    "compile": "tsc",
    "test": "run-s -c compile jest",
    "prebuild": "rimraf build",
    "build": "webpack",
    "start": "node build/main.js",
    "preversion": "run-s test build",
    "postversion": "git push && git push --tags && npm publish --access=public"
  },
  "author": "EOVE",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/eove/cmetrix"
  },
  "dependencies": {
    "@arpinum/log": "5.3.1",
    "@arpinum/promising": "3.1.1",
    "chalk": "4.1.0",
    "commander": "6.1.0",
    "cross-spawn": "7.0.3",
    "glob": "7.1.6",
    "lodash": "4.17.19",
    "mkdirp": "1.0.4",
    "mustache": "4.0.1",
    "ora": "5.1.0",
    "rimraf": "3.0.2",
    "shelljs": "0.8.4",
    "simple-git": "2.21.0"
  },
  "devDependencies": {
    "@types/chalk": "2.2.0",
    "@types/cross-spawn": "6.0.2",
    "@types/glob": "7.1.3",
    "@types/jest": "26.0.7",
    "@types/lodash": "4.14.158",
    "@types/mkdirp": "1.0.1",
    "@types/mustache": "4.0.1",
    "@types/node": "14.0.25",
    "@types/rimraf": "3.0.0",
    "@types/shelljs": "0.8.8",
    "html-loader": "1.3.2",
    "jest": "26.1.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.0.5",
    "ts-jest": "26.1.3",
    "ts-loader": "8.0.4",
    "tslint": "6.1.2",
    "tslint-config-prettier": "1.18.0",
    "typescript": "3.9.7",
    "webpack": "5.0.0",
    "webpack-cli": "4.0.0"
  },
  "jest": {
    "transform": {
      ".ts": "ts-jest"
    },
    "testRegex": "/lib/.*\\.spec\\.ts$",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ]
  }
}
